<Window x:Class="VokabelTrainer.AddWordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VokabelTrainer"
        mc:Ignorable="d"
        Title="AddWordDialog" Height="153.6" Width="322.8">
    <Grid>
        <Button Name="AddWordBtn" Content="Add" HorizontalAlignment="Left" Height="28" Margin="10,84,0,0" VerticalAlignment="Top" Width="151" Click="AddWordBtn_Click"/>
        <Button Name="CancelBtn" Content="Cancel" HorizontalAlignment="Left" Height="28" Margin="166,84,0,0" VerticalAlignment="Top" Width="141" Click="CancelBtn_Click"/>
        <Label Content="English:" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" VerticalAlignment="Top" Width="62"/>
        <Label Content="German:" HorizontalAlignment="Left" Height="33" Margin="12,44,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox Name="text_english" HorizontalAlignment="Left" Height="29" Margin="77,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>
        <TextBox Name="text_german" HorizontalAlignment="Left" Height="26" Margin="77,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>

    </Grid>
</Window>
