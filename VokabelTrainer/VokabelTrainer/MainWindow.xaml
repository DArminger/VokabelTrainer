<Window x:Class="VokabelTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VokabelTrainer"
        mc:Ignorable="d"
        Title="Vocabtrainer" Height="350" Width="525">
    <Grid Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="listBoxCategories" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Column="0" Grid.Row="3" Grid.RowSpan="2"/>
        <Menu x:Name="menu" HorizontalAlignment="Stretch"  VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="Menu">
                <MenuItem Name="Import" Header="Import Words"/>
                <MenuItem Name="Exit" Header="Exit"/>

            </MenuItem>
        </Menu>
        <TextBox x:Name="textBoxSearch" FontStyle="Italic" MaxHeight="30" HorizontalAlignment="Stretch" Grid.Column="0" Background="Azure" Grid.Row="1" Text="Search..." VerticalAlignment="Top" VerticalContentAlignment="Top"/>
        <DataGrid x:Name="dataGridCategory" Background="Azure" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Column="2" Grid.Row="1" Grid.RowSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn  Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="English"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="German"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="buttonStart" Content="Start Test" HorizontalAlignment="Stretch"  Grid.Column="2" VerticalAlignment="Stretch" Grid.Row="4"/>
        <Label x:Name="label" FontWeight="Bold" Content="Categories:" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="2"/>
    </Grid>
</Window>
